{
  "manifest_version": 3,
  "name": "Cookie Blocker",
  "version": "1.5",
  "permissions": [
    "declarativeNetRequestWithHostAccess",
    "declarativeNetRequest",
    "storage",
    "tabs",
    "contextMenus"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon-on-16.png",
      "48": "icons/icon-on-48.png",
      "128": "icons/icon-on-128.png"
    }
  },
  "icons": {
    "16": "icons/icon-on-16.png",
    "48": "icons/icon-on-48.png",
    "128": "icons/icon-on-128.png"
  },
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset_1",
        "enabled": false,
        "path": "rules.json"
      }
    ]
  }
}