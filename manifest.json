{
  "manifest_version": 3,
  "name": "Cookie Blocker",
  "version": "1.4",
  "permissions": [
    "declarativeNetRequestWithHostAccess",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "blockSetCookie",
        "enabled": false,
        "path": "rules.json"
      }
    ]
  }
}